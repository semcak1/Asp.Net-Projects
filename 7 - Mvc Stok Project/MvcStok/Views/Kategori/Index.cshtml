@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model  PagedList.IPagedList<Tbl_Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>İŞLEMLER</th>


    </tr>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <th>@kategori.KategoriId</th>
                <td>@kategori.KategoriAd</td>
                <td>
                    <a href="/Kategori/sil/@kategori.KategoriId" class="btn btn-danger">SİL</a>
                    <a href="/Kategori/KategoriGetir/@kategori.KategoriId" class="btn btn-success">GÜNCELLE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("index", new { sayfa }))
<a href="/Kategori/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

