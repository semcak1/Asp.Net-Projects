@using MvcStok.Models.Entity
@model List<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <table class="table table-bordered">
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>İŞLEMLER</th>
        </tr>
        <tbody>
            @foreach (var ürün in Model)
            {
            <tr>
                <th>@ürün.UrunId</th>
                <td>@ürün.UrunAd</td>
                <td>@ürün.Marka</td>
                <td>@ürün.Tbl_Kategoriler.KategoriAd</td>
                <td>@ürün.Fiyat</td>
                <td>@ürün.Stok</td>
                <td>
                    <a href="/Urun/sil/@ürün.UrunId" class="btn btn-danger">SİL</a>
                    <a href="/Urun/UrunGetir/@ürün.UrunId" class="btn btn-success">GÜNCELLE</a>
                </td>

            </tr>
            }
        </tbody>  
    </table>
    <a href="/Urun/YeniUrun" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
