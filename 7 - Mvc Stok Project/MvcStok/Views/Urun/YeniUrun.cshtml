@model MvcStok.Models.Entity.Tbl_Urunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <form class="form-group" method="post">
        <div>
            <label>Ürün Adı</label>
            <input type="text" name="UrunAd"  class="form-control" required="" maxlength="10" />
        </div>
        <br />
        <div>
            <label>Ürün Markası</label>
            <input type="text" name="Marka"  class="form-control" required="" />
        </div>
        <br />
        <div>
            <label>Ürün Kategori</label>
            @Html.DropDownListFor(m=>m.Tbl_Kategoriler.KategoriId,(List<SelectListItem>)ViewBag.dgr,new { @class="form-control"})
        </div>
        <br />
        <div>
            <label>Ürün Fiyat</label>
            <input type="text" name="Fiyat" class="form-control" />
        </div>
        <br />
        <div>
            <label>Ürün Stok</label>
            <input type="text" name="Stok"  value="" class="form-control" />
        </div>
        <br />
        <div>            
            <button class="btn btn-info">Ürün Ekle</button>
        </div>
        <br />
    </form>
